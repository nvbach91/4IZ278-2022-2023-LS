{layout '@layout-myProfile.latte'}

{block content_detail}

    <div class="card animation fade-in mx-auto col-xl-6 col-sm-12 mb-4">

        <div class="card-body">

            <h3>Změna hesla:</h3>

            {form updatePasswordForm}
                <!-- Password input -->
                <div class="form-outline mb-4">
                    {input current_password, class => "form-control"}
                    {label current_password, class => "form-label" /}
                </div>

                <div class="form-outline mb-4">
                    {input password, class => "form-control"}
                    {label password, class => "form-label" /}
                </div>

                <!-- Password again input -->
                <div class="form-outline mb-4">
                    {input password_again, class => "form-control"}
                    {label password_again, class => "form-label" /}
                </div>

                <hr>
                <a n:href="MyProfile:">
                    <button type="button" class="btn btn-danger btn-sm float-start"><i
                                class="fas fa-solid fa-xmark me-2"></i>Zrušit
                    </button>
                </a>
                {input updatePassword, class => "btn btn-success btn-sm float-end"}
            {/form}

        </div>

    </div>

{/block}